<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="450.0" spacing="0.0" style="-fx-background-color: #1a1e23;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pspro_activ2_castellano_ramos_adrian.chat.ChatController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0" style="-fx-background-color: #121519; -fx-border-color: #2c3239; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Label fx:id="labelUsuario" text="CONEXIÓN DEL CLIENTE CHAT" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnSalir" onAction="#handleSalir" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 15;" text="Salir" />
            </children>
        </HBox>

        <StackPane VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TextArea fx:id="areaChat" editable="false" style="-fx-control-inner-background: #1a1e23; -fx-text-fill: #ecf0f1; -fx-display-caret: false; -fx-background-color: transparent; -fx-border-color: #2c3239; -fx-border-radius: 10; -fx-background-radius: 10;" wrapText="true">
                    <font>
                        <Font size="13.0" />
                    </font>
                </TextArea>
            </children>
        </StackPane>

        <HBox alignment="CENTER" prefHeight="80.0" spacing="10.0" style="-fx-background-color: #121519;">
            <padding>
                <Insets left="15.0" right="15.0" />
            </padding>
            <children>
                <TextField fx:id="inputMensaje" onAction="#handleEnviar" prefHeight="40.0" promptText="Type a message..." style="-fx-background-color: #2c3239; -fx-text-fill: white; -fx-background-radius: 20; -fx-prompt-text-fill: #7f8c8d;" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets left="15.0" right="15.0" />
                    </padding>
                </TextField>
                <Button fx:id="btnEnviar" mnemonicParsing="false" onAction="#handleEnviar" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #3498db; -fx-background-radius: 50; -fx-text-fill: white;" text="➤">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>